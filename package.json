{
    "name": "mcanvas",
    "description": "the image-composer or image-croper that can draw image/text/watermark or crop the image.",
    "keywords": [
        "canvas",
        "image-composite",
        "image-textview",
        "image-crop",
        "image-croper",
        "watermark",
        "cropper"
    ],
    "main": "dist/mcanvas.js",
    "module": "dist/mcanvas.es.js",
    "moduleName": "MCanvas",
    "scripts": {
        "dev:server": "NODE_ENV=development webpack -w --config build/webpack.server.js",
        "dev:client": "NODE_ENV=development webpack-dev-server --config build/webpack.dev.js",
        "build:server": "NODE_ENV=production webpack -p --config build/webpack.server.js",
        "build:client": "NODE_ENV=production webpack -p --config build/webpack.publish.js",
        "build": "rm -rf dist && npm-run-all --parallel build:server build:client",
        "publish:client": "cd client && npm publish",
        "publish:server": "cd server && npm publish"
    },
    "author": "gxd(159042708@qq.com)",
    "license": "MIT",
    "repository": {
        "url": "https://github.com/xd-tayde/mcanvas",
        "type": "git"
    },
    "devDependencies": {
        "clean-webpack-plugin": "^3.0.0",
        "css-loader": "^3.5.1",
        "electron-rebuild": "^1.10.1",
        "file-loader": "^6.0.0",
        "html-webpack-plugin": "^4.0.4",
        "node-sass": "^4.13.1",
        "nodemon": "^2.0.3",
        "npm-run-all": "^4.1.5",
        "sass-loader": "^8.0.2",
        "style-loader": "^1.1.3",
        "ts-loader": "^6.2.2",
        "ts-node": "^8.10.1",
        "typescript": "^3.9.2",
        "url-loader": "^4.1.0",
        "webpack": "^4.42.1",
        "webpack-cli": "^3.3.11",
        "webpack-dev-server": "^3.10.3",
        "webpack-merge": "^4.2.2",
        "webpack-node-externals": "^1.7.2",
        "webpack-shell-plugin": "^0.5.0"
    },
    "dependencies": {
        "@types/zepto": "^1.0.30",
        "i": "^0.3.6",
        "npm": "^6.14.5",
        "tslint": "^6.1.2"
    }
}
